<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".SettingsActivity">

    <include android:id="@+id/setting_toolbar"
        layout="@layout/app_bar_layout">


    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_toolbar">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_edit_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_image_change"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:elevation="1dp"
                android:layout_marginTop="190dp"
                android:src="@drawable/add_image1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/textviewdark"
                android:text="สถานะ"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/settings_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="280dp"
                android:hint="ยังไม่ได้ตั้งค่า"
                android:padding="12dp"
                tools:ignore="UnknownId"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/textviewdark"
                android:text="ชื่อผู้ใช้งาน"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/settings_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="370dp"
                android:padding="12dp"
                android:hint="ชื่อผู้ใช้งาน"
                tools:ignore="UnknownId"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="430dp"
                android:background="@drawable/textviewdark"
                android:text="เพศ"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/settings_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="460dp"
                android:hint="เพศของคุณ"
                android:textSize="10dp"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="520dp"
                android:background="@drawable/textviewdark"
                android:text="ความสัมพันธ์"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/settings_profile_reletionship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="550dp"
                android:hint="ความสัมพันธ์ของคุณ"
                android:textSize="10dp"
                android:textColor="@android:color/background_dark"/>



<!--            <EditText-->
<!--                android:id="@+id/settings_profile_gender"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/settings_profile_image"-->
<!--                android:layout_marginLeft="40dp"-->
<!--                android:layout_marginRight="40dp"-->
<!--                android:background="@color/colorWhite"-->
<!--                android:layout_marginTop="505dp"-->
<!--                android:padding="12dp"-->
<!--                android:hint="เพศของคุณ"-->
<!--                tools:ignore="UnknownId"-->
<!--                android:textSize="20dp"-->
<!--                android:textColor="@android:color/background_dark" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="610dp"
                android:background="@drawable/textviewdark"
                android:text="รุ่น"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/settings_profile_generation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="640dp"
                android:hint="รุ่นของคุณ"
                android:textSize="10dp"
                android:textColor="@android:color/background_dark"/>



            <Button
                android:id="@+id/setting_update_account_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/settings_relationship_status"
                android:layout_marginTop="700dp"
                android:background="@drawable/input"
                android:text="อัพเดตข้อมูล"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="UnknownId" />


        </RelativeLayout>
        
    </ScrollView>

</RelativeLayout>